/* pages/home/home.wxss */
.img_box {
  width: 90%;
  height: 600rpx;
  margin: 40rpx auto;
}
.img_box image {
  width: 100%;
  height: 600px;
  /* height: 525px; */
  border-radius: 6px;
  box-shadow: 6px 23px 50px 10px #ccc;
}
.img_box span.change_icon image {
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  bottom: 30px;
  left: 50%;
  margin-left: -60rpx;
  z-index: 99;
  box-shadow: none;
  animation: arrow 1s linear infinite;
}
@keyframes arrow {
  0% {
    transform: translate3d(0, 10rpx, 0);
  }
  50% {
    transform: translate3d(0, -5rpx, 0);
  }
  100% {
    transform: translate3d(0, 0, 0);
  }
}